{
  "baseUrl": "types",
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "dom",
      "es2015",
      "es2017",
      "es2015.promise"
    ],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "outDir": "./lib",
    "removeComments": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "typeRoots": ["types"]
}
